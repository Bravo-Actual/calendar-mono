# Agent Service Configuration
NODE_ENV=development
PORT=3020

# OpenRouter AI Configuration
# Get your API key at: https://openrouter.ai/keys
# Required for AI agent functionality
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Supabase Configuration
# For local development - should match calendar app's Supabase setup
# For production, replace with your actual Supabase project URL and keys
SUPABASE_URL=http://127.0.0.1:55321
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Database Configuration
# PostgreSQL connection string for Mastra's PostgresStore
# For local development, this connects to Supabase's local database
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:55322/postgres

# Service URLs
# URLs for cross-service communication
APP_URL=http://localhost:3010
AGENT_URL=http://localhost:3020