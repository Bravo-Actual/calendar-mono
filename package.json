{
  "name": "calendar-mono",
  "private": true,
  "scripts": {
    "setup": "node scripts/setup.js",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:apps": "turbo run dev --filter='./apps/*'",
    "dev:calendar": "turbo run dev --filter=@calendar/web",
    "dev:calendar-ai": "turbo run dev --filter=calendar-ai",
    "dev:network": "bash scripts/setup-network-env.sh && turbo run dev:network --parallel",
    "dev:network:calendar": "turbo run dev:network --filter=@calendar/web",
    "dev:network:calendar-ai": "turbo run dev:network --filter=calendar-ai",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:reset": "bash scripts/db-reset.sh",
    "db:types": "bash scripts/regenerate-types.sh",
    "supabase:start": "turbo run start --filter=@repo/supabase",
    "supabase:stop": "turbo run stop --filter=@repo/supabase",
    "supabase:restart": "pnpm supabase:stop && pnpm supabase:start",
    "supabase:status": "turbo run status --filter=@repo/supabase",
    "docs:update": "bash scripts/update-ai-sdk-docs.sh"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
