{
  "name": "calendar-mono",
  "private": true,
  "scripts": {
    "setup": "node scripts/setup.js",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:apps": "turbo run dev --filter='./apps/*'",
    "dev:calendar": "turbo run dev --filter=@calendar/web",
    "dev:agent": "turbo run dev --filter=@calendar/agent",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:reset": "turbo run db:reset",
    "supabase:stop": "turbo run stop --filter=@repo/supabase",
    "supabase:status": "turbo run status --filter=@repo/supabase",
    "docs:update": "bash scripts/update-ai-sdk-docs.sh"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
