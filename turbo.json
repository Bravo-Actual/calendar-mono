{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@repo/supabase#dev"]
    },
    "dev:network": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@repo/supabase#dev"]
    },
    "@repo/supabase#dev": {
      "cache": false,
      "persistent": true
    },
    "db:reset": {
      "cache": false,
      "dependsOn": ["@repo/supabase#reset"]
    },
    "supabase:stop": {
      "cache": false
    }
  }
}
